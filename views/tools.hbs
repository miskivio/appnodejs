<h5>Boards</h5>
<h2>Welcome {{name}}</h2>
<p>here we go</p>

{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>
                    title
                </th>
                <th>
                    Date
                </th>
                <th>
                    Status
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td>
                        <a href="/stories/{{_id}}"></a>
                        {{title}}
                    </td>
                    <td>
                        {{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}
                    </td>
                    <td>
                        <span class="dash-status">
                            {{status}}
                        </span>
                    </td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories</p>
{{/if}}